<?xml version="1.0" encoding="UTF-8"?>
<?jelly escape-by-default='true'?>
<j:jelly xmlns:j="jelly:core" xmlns:f="/lib/form">
    <f:section title="${%CloudWatch settings}">
        <f:entry title="${%Log group}" field="logGroupName">
            <f:textbox/>
        </f:entry>
        <f:entry title="${%Fluentd host}" field="fluentdHost">
            <f:textbox/>
        </f:entry>
        <f:entry title="${%Fluentd port}" field="fluentdPort">
            <f:number/>
        </f:entry>
        <f:validateButton title="Validate configuration" progress="Validating..." method="validate"
                          with="logGroupName,fluentdHost,fluentdPort,region,credentialsId"/>
    </f:section>
</j:jelly>